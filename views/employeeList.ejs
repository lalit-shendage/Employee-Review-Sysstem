<h3 class="text-center mt-3">
  All Employees List
</h3>

<div class="container mt-4">
  <table class="table table-dark table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <!-- <th scope="col">Password</th> -->
        <th scope="col">Role</th>
        <th scope="col">Make admin</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>

    <tbody>
      <% for(let i=0;i < employees.length;i++){ %>
      <tr>
        <td><%=employees[i].name %></td>
        <td><%=employees[i].email %></td>
        <!-- <td><%=employees[i].password %></td> -->
        <td><%=employees[i].role %></td>
        <td>
            <form method="POST" action="/admin/newAdmin/<%=employees[i]._id%>">
                <input type="hidden" name="method" value="POST">
                <button type="submit" class="btn btn-primary">Make admin</button>
              </form>
              
        <td>
            <a href="/admin/delete-employee/<%=employees[i]._id%>"
                class="btn <%= employees[i].role === 'admin' ? 'btn-danger disabled' : 'btn-danger' %>"
             >
               Delete
             </a>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
