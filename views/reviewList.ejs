<table class="table table-striped table-dark my-3 mx-auto w-75">
    <thead>
      <tr>
        <th>Review no.</th>
        <th>To</th>
        <th>From</th>
        <th>Review</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% for (let i = 0; i < reviews.length; i++) { %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= reviews[i].to.name %></td>
          <td><%= reviews[i].from.name %></td>
          <td><%= reviews[i].review %></td>
          <td>
            <form method="POST" action="/reviews/delete/<%= reviews[i]._id %>?_method=DELETE">
              <button class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>