<div class="container">
  <div class="row bg-dark my-3 text-light">
    <!-- Reviews to be done -->
    <div class="col-md-6">
      <div>
        <h1>To Review</h1>
      </div>
      <div>
        <% for(let r of recipients){ %>
        <div>
          <h5>To: <%= r.name %></h5>
          <form action="/reviews/newReview/<%= r._id %>" method="GET">
            <textarea
              class="form-control"
              placeholder="Leave a review here"
              name="newReview"
              rows="5"
            ></textarea>
            <div class="mt-2">
              <button class="btn btn-primary" type="submit">Submit</button>
            </div>
          </form>
        </div>
        <% } %>
      </div>
    </div>

    <!--Recieved reviews column -->
    <div class="col-md-6">
      <div>
        <h1>My Reviews</h1>
      </div>
      <div class="card mt-5 bg-light">
        <div class="card-header">Reviews</div>
        <ul class="list-group list-group-flush">
          <% for(let i = 0; i < reviews.length; i++) { %>
          <li class="list-group-item bg-white text-dark">
            <p class="mb-0">
              <strong>Message:</strong> <%= reviews[i].review %>
            </p>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</div>
